###############################################
# HHMS Environment Configuration (Example)
# Copy this file to `.env` and adjust values.
###############################################

# --- User Service (Postgres) ---
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=users
POSTGRES_HOST=postgres-user
POSTGRES_PORT=5432

# --- Patient Data Service (TimescaleDB/Postgres) ---
TIMESCALE_USER=tsuser
TIMESCALE_PASSWORD=tspassword
TIMESCALE_DB=patientdata
TIMESCALE_HOST=timescale-data
TIMESCALE_PORT=5432

# --- Analytics Service (Postgres) ---
ANALYTICS_DB_USER=analytics
ANALYTICS_DB_PASSWORD=analytics
ANALYTICS_DB_NAME=analytics
ANALYTICS_DB_HOST=postgres-analytics
ANALYTICS_DB_PORT=5432

# --- Alerts Service (Postgres) ---
ALERTS_DB_USER=alerts
ALERTS_DB_PASSWORD=alerts
ALERTS_DB_NAME=alerts
ALERTS_DB_HOST=postgres-alerts
ALERTS_DB_PORT=5432

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- pgAdmin (optional) ---
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# --- Twilio (Alerts) ---
# Set TWILIO_TEST_MODE=true to avoid real SMS.
TWILIO_TEST_MODE=true
# For real SMS, set the following and set TWILIO_TEST_MODE=false
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_FROM_NUMBER=+15555550123
# Optional convenience for local tests
# TEST_PHONE_NUMBER=+15555550123
# Optional API key if used
# TWILIO_API_KEY=
